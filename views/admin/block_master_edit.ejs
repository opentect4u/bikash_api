<%- include('../template/header'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= heading %></h1>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <% if(message){ %>
      <div
        class="alert alert-<%= message.type; %> alert-dismissible fade show"
        role="alert"
      >
        <strong><%= message.message; %></strong>
        <button
          type="button"
          class="close"
          data-dismiss="alert"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
      <!-- SELECT2 EXAMPLE -->
      <div class="card card-default">
        <div class="card-header">
          <h3 class="card-title"><%= sub_heading %></h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <form action="/tnx_srch" method="post">
            <div class="row">
              <div class="col-md-5">
                <div class="form-group row">
                  <label for="block_id" class="col-sm-2 col-form-label"
                    >Code</label
                  >
                  <div class="col-sm-10">
                    <input
                      type="text"
                      class="form-control"
                      id="block_id"
                      name="block_id"
                      placeholder="Block Code"
                      value="<%= block_data ? block_data.block_id : '' %>"
                    />
                  </div>
                </div>
              </div>
              <div class="col-md-5">
                <div class="form-group row">
                  <label for="ardb_id" class="col-sm-2 col-form-label"
                    >ARDB</label
                  >
                  <div class="col-sm-10">
                    <select name="ardb_id" id="ardb_id" class="form-control">
                      <option>Select One</option>
                      <% if(ardb_list){ var selected = '';
                      ardb_list.forEach((dt) => { if(block_data){
                      if(block_data.ardb_id == dt.ardb_code) selected =
                      'selected'; else selected = ''; } %>
                      <option value="<%= dt.ardb_code %>" <%= selected %>
                        > <%= dt.ardb_name %>
                      </option>
                      <% }) } %>
                    </select>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-5">
                <div class="form-group row">
                  <label for="block_name" class="col-sm-2 col-form-label"
                    >Name</label
                  >
                  <div class="col-sm-10">
                    <input
                      type="text"
                      class="form-control"
                      id="block_name"
                      name="block_name"
                      placeholder="ARDB Name"
                      value="<%= block_data ? block_data.block_name : '' %>"
                    />
                  </div>
                </div>
              </div>
            </div>
            <center>
              <button
                type="submit"
                class="btn btn-outline-success mt-4"
                id="submit"
              >
                Save
              </button>
            </center>
          </form>
        </div>
      </div>
      <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include('../template/footer'); %>
