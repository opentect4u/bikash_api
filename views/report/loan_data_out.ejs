<%- include('../template/header'); %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= heading %></h1>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- SELECT2 EXAMPLE -->
      <div class="card card-default">

        <!-- /.card-header -->
        <div class="card-body">
          <div class="row" id="divToPrint">
            <div class="col-md-12">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                  <tr>
                    <!-- <th></th> -->
                    <th>#</th>
                    <th>Customer <br>Name</th>
                    <th>Account <br>Name</th>
                    <th>Sector</th>
                    <th>LF No</th>
                    <th>Received <br>Amount</th>
                    <th>Collection <br>Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=1; 
                  if(loan_data){
                  loan_data.forEach((dt)=> { %>
                  <tr>
                    <td><%= i; %></td>
                    <td><%= dt.cust_name; %></td>
                    <td><%= dt.loan_acc_name; %></td>
                    <td><%= dt.sector; %></td>
                    <td><%= dt.lf_no; %></td>
                    <td><%= dt.r_amt; %></td>
                    <td><%= new Date(dt.updated_dt).toLocaleString('en-IN'); %></td>
                  </tr>
                  <% i++; })}else{ %>
                  <td colspan="6" class="text-center">No Data Found</td>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
          <center><button type="button" class="btn btn-outline-success mt-4" onclick="printDiv()">Print</button></center>
        </div>
      </div>
      <!-- /.card -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<%- include('../template/footer'); %>

